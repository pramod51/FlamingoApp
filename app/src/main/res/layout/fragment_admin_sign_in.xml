<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_ten"
    android:paddingTop="@dimen/dimen_five"
    android:paddingRight="@dimen/dimen_ten"
    android:paddingBottom="@dimen/dimen_five">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorSecondaryText">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_mobile_no"
            style="@style/customEditText"
            android:drawableStart="@drawable/ic_email_accent_24dp"
            android:drawableLeft="@drawable/ic_email_accent_24dp"
            android:drawablePadding="@dimen/dimen_five"
            android:drawableTint="@color/colorAccent"
            android:hint="@string/hint_mobile_no_or_email_id"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorSecondaryText">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_password"
            style="@style/customEditText"
            android:drawableStart="@drawable/ic_lock_accent_24dp"
            android:drawableLeft="@drawable/ic_lock_accent_24dp"
            android:drawablePadding="@dimen/dimen_five"
            android:hint="@string/hint_password"
            android:drawableTint="@color/colorAccent"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_show_password"
            android:textColor="@color/colorSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/label_show_password"
            android:button="@drawable/check_box_selector"
            android:textSize="@dimen/dimen_Value"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentStart="true" />

<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/tv_forgot_credentials"-->
<!--            style="@style/customTextView"-->
<!--            -->
<!--            android:textColor="@color/colorSecondaryText"-->
