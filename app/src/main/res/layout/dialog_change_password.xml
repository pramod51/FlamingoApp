<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/minDialogWidth"
    android:orientation="vertical"
    android:padding="@dimen/dimen_fifteen"
    app:cardBackgroundColor="@android:color/white">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_password"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:background="@drawable/default_edit_text_selector"
        android:padding="@dimen/dimen_ten"
        android:hint="@string/hint_new_password"
        android:imeOptions="actionDone" />

    <RelativeLayout
        android:id="@+id/rl_adContainer"
        android:layout_marginTop="@dimen/dimen_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>


