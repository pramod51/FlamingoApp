<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_holiday_date"
        style="@style/customTextView"
        android:layout_width="match_parent"
        android:background="@drawable/bg_rectangle_divider"
        android:clickable="true"
        android:drawablePadding="@dimen/dimen_five"
        android:foreground="?attr/selectableItemBackground"
        android:hint="@string/hint_set_date"
        android:paddingTop="@dimen/dimen_ten"
        android:paddingBottom="@dimen/dimen_ten"
        android:textColorHint="@color/colorSecondaryText"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_holiday_description"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_ten"
        android:background="@drawable/bg_rectangle_divider"
        android:gravity="top"
        android:hint="@string/hint_enter_description"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="4" />


</LinearLayout>